  <style>
   section {
       margin-bottom: 1em;
   }
   .test {
       font: 20px/1 sans-serif;
   }
   .test > div, .test > p {
       display: inline-block;
       vertical-align: top;
       border: 1px solid #AAA;
       height: 2em;
       overflow: hidden;
       width: 1em;
       width: 1ic;
   }
   .test > p {
       margin: 0 1em 0 0;
       color: blue;
   }
   .wb-n        { word-break: normal; }
   .wb-ka       { word-break: keep-all; }
   .wb-ba       { word-break: break-all; }
   .wb-bw       { word-break: break-word; }
   .lb-l        { line-break: loose; }
   .lb-n        { line-break: normal; }
   .lb-s        { line-break: strict; }
   .lb-any      { line-break: anywhere; }
  </style>
