{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "'https://www.w3.org/ns/anno.jsonld must be' an @contxt value (Section 3.1)",
    "assertionType": "must",
    "expectedResult": "valid",
    "errorMessage": "Error: 'https://www.w3.org/ns/anno.jsonld' is neither first nor only @context value.",
    "type": "object",
    "properties": {"@context": {
        "anyOf": [
            {
                "type": "string",
                "enum": ["https://www.w3.org/ns/anno.jsonld"]
            },
            {
                "type": "array",
                "minItems": 1,
                "items": [{
                    "type": "string",
                    "enum": ["https://www.w3.org/ns/anno.jsonld"]
                }]
            }
        ],
        "not": {"type": "object"}
    }}
}
 
